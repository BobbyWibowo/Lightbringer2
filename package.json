{
  "name": "lightbringer2",
  "version": "2.0.0-dev",
  "description": "Yet another Discord self-bot written with Discord.js (and Discord Akairo framework)",
  "author": "Bobby Wibowo",
  "license": "MIT",
  "repository": "github:BobbyWibowo/Lightbringer2",
  "bugs": "https://github.com/BobbyWibowo/Lightbringer2/issues",
  "main": "./src/bot.js",
  "scripts": {
    "setup": "node ./setup.js",
    "start": "node ./lightbringer2.js",
    "background": "screen -dmS lb2 node ./lightbringer2.js",
    "pm2": "pm2 start --name lb2 ./lightbringer2.js",
    "lint": "eslint *.js src/**/*.js",
    "update": "git pull && yarn --force"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "booru": "^0.4.0",
    "canvas": "^1.6.10",
    "chalk": "^2.4.0",
    "color-convert": "^1.9.1",
    "color-name": "^1.1.3",
    "common-tags": "^1.7.2",
    "discord-akairo": "1Computer1/discord-akairo",
    "discord.js": "hydrabolt/discord.js",
    "encodeurl": "^1.0.2",
    "erlpack": "discordapp/erlpack",
    "fs-extra": "^5.0.0",
    "mathjs": "^4.1.2",
    "moment": "^2.22.0",
    "mw-dict": "^3.0.0",
    "path": "^0.12.7",
    "pixel-average": "^1.0.1",
    "readline": "^1.3.0",
    "snekfetch": "^3.6.4",
    "txtgen": "^2.0.1",
    "urban-dictionary-es6": "^1.0.1",
    "uws": "^9.148.0"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "standard"
    ],
    "rules": {
      "curly": [
        "error",
        "all"
      ],
      "prefer-const": [
        "error",
        {
          "destructuring": "any",
          "ignoreReadBeforeAssign": false
        }
      ],
      "object-shorthand": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single"
      ]
    }
  },
  "eslintIgnore": [
    "**/*.min.js"
  ]
}
